                        <div data-bind="ifnot: $data.isInStack" >
                            <div data-bind="template: { name: 'inner-card-template' } ">
                            </div>
                        </div>
                    </div>
                    
                    
                    
                </div>
        </script>

        

        <script type="text/html" id="task-template">
                <div class="w3-col w3-container s12 m12 l12">
                    <div class="webpad-card w3-animate-opacity" data-bind="attr: {id: $data.Note.id }">
                        <!-- ko template: { name: 'to-be-removed-template' }  -->
                        <!-- /ko -->
                        <span data-bind="ifnot: $data.toBeRemoved">
                            <h2>
                                <span data-bind="if: $data.Note.isDone">
                                    <span class="webpad-brightness-dimmed" style="color: #64e05e;" data-bind=" click: $data.switchDone">[x]</span>
                                    <span class="webpad-brightness-dimmed" data-bind="ifnot: $data.underEdit">
                                        <span 
                                            placeholder="..." 
                                            class="webpad-contenteditable webpad-break-words-node"
                                            data-bind="
                                                contentEditable: false,
                                                htmlLazy:  $data.Note.text,
                                                style:
                                                {
                                                    color: $data.Note.color,
                                                    'text-decoration': 'line-through'
                                                },
                                                event: {blur: $root.SwitchEditOfCard},
                                                hasFocus: $data.underEdit
                                                " 
                                        ></span>
                                    </span>
                                </span>
                                <span data-bind="ifnot: $data.Note.isDone">
                                    <span class="webpad-brightness-dimmed" style="color: aliceblue;" data-bind=" click: $data.switchDone">[o]</span>
                                    <span data-bind="ifnot: $data.underEdit">
                                        <span 
                                            placeholder="..." 
                                            class="webpad-contenteditable webpad-break-words-node"
                                            data-bind="
                                                contentEditable: $data.underEdit,
                                                htmlLazy:  $data.Note.text,
                                                style:
                                                {
                                                    color: $data.Note.color,
                                                },
                                                event: {blur: $root.SwitchEditOfCard},
                                                hasFocus: $data.underEdit
                                                " 
                                        ></span>
                                    </span>
                                </span>
                                <span data-bind="if: $data.underEdit">
                                    <span 
                                            placeholder="..." 
                                            class="webpad-contenteditable webpad-main-information webpad-break-words-node"
                                            data-bind="
                                                contentEditable: $data.underEdit,
                                                htmlLazy:  $data.Note.text,
                                                style:
                                                {
                                                    color: $data.Note.color,
                                                },
                                                event: {blur: $root.SwitchEditOfCard},
                                                hasFocus: $data.underEdit
                                                " 
                                        ></span>
                                        
                                </span>
                                <span data-bind="if: $data.toolBoxVisible">
                                    <span class="webpad-brightness-dimmed" style="color: aliceblue;" data-bind=" click: $data.switchToolBoxVisibility" alt="close toolbox">[^_^]</span>
                                </span>
                                <span data-bind="ifnot: $data.toolBoxVisible">
                                    <span class="webpad-brightness-dimmed" style="color: aliceblue;" data-bind=" click: $data.switchToolBoxVisibility" alt="open toolbox">[..]</span>
                                </span>
                                <span data-bind="if: $data.toolBoxVisible">
                                    <span data-bind="ifnot: $data.underEdit">
                                        <div class="webpad-brightness-dimmed webpad-button-no-border" data-bind=" click: $root.SwitchEditOfCard">
                                            <img src="svg/pencil-alt.svg" class="webpad-edit-pencil" alt="Edit"/> 
                                        </div>
                                    </span>
                                </span>
                                &nbsp;
                                <span data-bind="if: $data.toolBoxVisible">
                                    <div class="webpad-brightness-dimmed webpad-button-no-border" data-bind=" click: $data.prepareToBeRemoved">
                                        <img src="svg/trash-orange.svg" class="webpad-edit-pencil" alt="remove"/> 
                                    </div>
                                    <button  class="webpad-node webpad-green" 
                                        data-bind=
                                            "click: $data.convertFromTask,
                                            text: 'not a task'">
                                    </button>
                                </span>
                            </h2>
                            
                            
                        </span>
                       
        
                        
                        
                    </div>
                    
                    
                    
                </div>
        </script>

        <script type="text/html" id="card-type-template">
                <div  data-bind="if: $data.isTask" >
                    <div  data-bind="template: { name: 'task-template' } ">
                    </div>
                </div>
                <div  data-bind="ifnot: $data.isTask" >
                    <div  data-bind="template: { name: 'card-template' } ">
                    </div>
                </div>
        </script>

        <script type="text/html" id="show-more-template">
                <div class="w3-row" data-bind="if: $root.ShowExtendCurrentResultLimit">
                   <div class="w3-col w3-container s12 m12 l12">
                       <span>                    
                            <button  class="webpad-node webpad-green" 
                                data-bind=
                                    "click: $root.ExtendCurrentResultLimit,
                                    text: 'Show more items ( ' + $root.NumberOfHiddenSearhItems() + ' hidden)'">
                            </button>
                        </span>
                   </div>
                </div>
        </script>
        <div id="webpad-header-absolute-position" class="webpad-header-absolute-position" style="display: none;" data-bind="visible: !$root.PromoVisible() && !$root.menuIsOpen()">
            <div class="w3-row">
                <div class="w3-col w3-container s12 m12 l12">
                    <div class=" webpad-button-no-border" data-bind="click: $root.toggleMenu">
                        <span style="font-size: 2rem;">
                            <img src="svg/bars.svg" class="webpad-edit-pencil" alt="open menu"/> 
                        </span>
                        
                    </div>
                    <span class="webpad-color-yellow" style="font-size: 2rem;">
                        Web
                    </span>
                    <span class="webpad-color-blue" style="font-size: 2rem;">
                        Pad
                    </span>

                    <span class="webpad-color-yellow" style="font-size: 2rem;">
                        : personal wiki
                    </span>
                </div>
            </div>
        </div>
        <div 
            class="webpad-menu-absolute-position webpad-menu-animate-left" 
            style="display: none;" 
            data-bind="
                visible: !$root.PromoVisible() && $root.menuWasAlreadyOpen(),
                css: { 
                    'webpad-menu-animate-show-from-left': $root.menuIsOpen(),
                    'webpad-menu-animate-fade-back': !$root.menuIsOpen()
                }">
            <div class="w3-row webpad-top-of-stack">
                <div class="w3-col w3-container s12 m12 l12">
                    <span class="webpad-color-yellow" style="font-size: 2rem;">
                        Web
                    </span>
                    <span class="webpad-color-blue" style="font-size: 2rem;">
                        Pad
                    </span>
                    <span class="webpad-color-yellow" style="font-size: 2rem;">
                        : options
                    </span>
                    <div style="float: right;" class=" webpad-button-no-border" data-bind="click: $root.toggleMenu">
                        <span style="font-size: 2rem;">
                            <img src="svg/times-close-menu.svg" class="webpad-edit-pencil" alt="close menu"/> 
                        </span>
                        
                    </div>
                </div>
                <div class="w3-col w3-container s12 m12 l12">
                    <button style="" class="webpad-node webpad-blue-print" 
                            data-bind="click: $root.changeBackground">
                            gray background
                    </button>
                    <button style="" class="webpad-node webpad-yellow" 
                            data-bind="click: $root.changeBackgroundToDefault">
                            dark background
                    </button>
                </div>
                
            </div>
        </div>
        <div class="" style="display: none; width: 100%;" data-bind="visible: !$root.PromoVisible()">
            <div style="width: 100%; padding-top: 3rem;" class="webpad-search-result-area">
                <div class="w3-row" >
                    <div  class="w3-col w3-container s12 m6 l4 webpad-text-column" data-bind="if: columnsCount() && cardsByColumns().length > 0">
                        <div class="w3-row" data-bind="template: { name: 'card-type-template', foreach: cardsByColumns()[0] } ">

                        </div>
                        <div style="" data-bind="template: { name: 'show-more-template' } " ></div>
                    </div>
                    <div  class="w3-col w3-container s12 m6 l4 webpad-text-column" data-bind="if: columnsCount() && cardsByColumns().length > 1">
                        <div class="w3-row" data-bind="template: { name: 'card-type-template', foreach: cardsByColumns()[1] } ">

                        </div>
                        <div style="" data-bind="template: { name: 'show-more-template' } " ></div>
                    </div>
                    <div  class="w3-col w3-container s12 m6 l4 webpad-text-column" data-bind="if: columnsCount() && cardsByColumns().length > 2">
                        <div class="w3-row" data-bind="template: { name: 'card-type-template', foreach: cardsByColumns()[2] } ">

                        </div>
                        <div style="" data-bind="template: { name: 'show-more-template' } " ></div>
                    </div>
                    <div  class="w3-col w3-container s12 m6 l4 webpad-text-column" data-bind="if: columnsCount() && cardsByColumns().length > 3">
                        <div class="w3-row" data-bind="template: { name: 'card-type-template', foreach: cardsByColumns()[3] } ">

                        </div>
                        <div style="" data-bind="template: { name: 'show-more-template' } " ></div>
                    </div>
                    <div  class="w3-col w3-container s12 m6 l4 webpad-text-column" data-bind="if: columnsCount() && cardsByColumns().length > 4">
                        <div class="w3-row" data-bind="template: { name: 'card-type-template', foreach: cardsByColumns()[4] } ">

                        </div>
                        <div style="" data-bind="template: { name: 'show-more-template' } " ></div>
                    </div>
                </div>
                
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
            </div>
            
        </div>
        <div class="webpad-search-absolute-position" style="display: none;" data-bind="visible: !$root.PromoVisible(), style: {bottom: $root.searchBarPosition}">
            <div class="w3-row">
                <div class="w3-col w3-container s0 m2 l3">
                </div>
                <div class="w3-col w3-container s12 m8 l6">
                    <h2>
                    
                            <input 
                                placeholder="create or find..." 
                                class="webpad-search-bar"
                                type="text" 
                                data-bind="
                                    textInput: $root.SearchNotesQuery,
                                    event: {keypress: $root.searchBarKeyPress}
                                    " 
                            />
                            <span data-bind="if: $root.SearchNotesQuery().trim().length > 0">
                                <div class="webpad-button-no-border" data-bind=" click: $root.CreateNoteFromSearchQuery">
                                    <img src="svg/plus.svg" class="webpad-edit-pencil" alt="create"/> 
                                </div>
                            </span>
                            
        
                    
                    </h2>
                </div>
            </div>
            
            
        
        </div>
        
</body>
</html>