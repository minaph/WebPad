<script type="text/html" id="card-template">
        <div class="w3-col w3-container s12 m6 l4">
            <div class="webpad-card" data-bind="attr: {id: $data.Note.id }">
                <h2>
                    <span data-bind="ifnot: $data.Note.underEdit">
                        <span
                            class="webpad-node" data-bind=
                        "
                            style:
                            {
                                color: $data.Note.color,
                                background: $data.Note.background,
                            },
                            text:$data.Note.textAlmost">
                        </span>
                        <button class="webpad-node webpad-blue-print" data-bind=" click: $root.SwitchEditOfNode">Edit</button>
                    </span>
                        
                    <span data-bind="if: $data.Note.underEdit">
                        <span style="width: 100%;" class="webpad-node"
                            data-bind="
                                    style:
                                    {
                                        color: $data.Note.color,
                                        background: $data.Note.background,
                                    },">
                            <input 
                                placeholder="..." 
                                
                                style="box-sizing : border-box; width: 100%;" 
                                type="text" 
                                data-bind="
                                    textInput:  $data.Note.text,
                                    " 
                            />
                        </span>
                        <button class="webpad-node webpad-blue-print" data-bind="click: $root.SwitchEditOfNode">Close Edit</button>
                    </span>
                    
                </h2>
                <div data-bind="if: $root.previousConnectFrom() && $root.previousConnectFrom() != $data">
                    <button class="webpad-node webpad-purple" 
                        data-bind=
                            "click: $root.ConnectPreviousWithCurrent">
                            Connect from:
                    </button>
                    <span class="webpad-node webpad-orange" 
                        data-bind="
                         style:
                            {
                                color: $root.previousConnectFrom().Note.color,
                                background: $root.previousConnectFrom().Note.background,
                            },
                        text: $root.previousConnectFrom().Note.textAlmost" > </span>
                </div>
                <div data-bind="if: $root.previousConnectFrom() && $root.previousConnectFrom() != $data">
                    <button class="webpad-node webpad-yellow" 
                        data-bind=
                            "click: $root.ClearPreviousFrom">
                            - Discard Connect
                    </button>
                </div>
                <div data-bind="foreach: $data.Tags">
                    <div>
                        <span data-bind="ifnot: $data.underEdit">
                            <span class="webpad-node webpad-orange" data-bind=" text: $data.labelAlmost" > </span>
                            <span class="webpad-node" data-bind="
                            style:
                            {
                                color: $data.Destination.color,
                                background: $data.Destination.background,
                            },text: $data.Destination.textAlmost">
                            </span>
                            <button class="webpad-node webpad-blue-print" data-bind=" click: $root.jumpToCard"> jump to</button>
                            <button class="webpad-node webpad-blue-print" data-bind=" click: $root.SwitchEditOfConnection">Edit</button>

                        </span>
                            
                        <span data-bind="if: $data.underEdit">
                            
                                <span style="width: 100%;" class="webpad-node webpad-green">
                                    <input 
                                        placeholder="..." 
                                        
                                        style="box-sizing : border-box; width: 100%;" 
                                        type="text" 
                                        data-bind="
                                            textInput: $data.label,
                                            " 
                                    />
                                </span>
                            
                                <span style="width: 100%;" class="webpad-node"
                                    data-bind="
                                            style:
                                            {
                                                color: $data.Destination.color,
                                                background: $data.Destination.background,
                                            },">
                                    <input 
                                        placeholder="..." 
                                        
                                        style="box-sizing : border-box; width: 100%;" 
                                        type="text" 
                                        data-bind="
                                            textInput:  $data.Destination.text,
                                            " 
                                    />
                                </span>
                            
                                <button class="webpad-node webpad-blue-print" data-bind="click: $root.SwitchEditOfConnection">Close Edit</button>
                            


                        </span>

                    </div>
                </div>
                <div data-bind="">
                    <button class="webpad-node webpad-purple" data-bind="click: $root.AddNoteToExistingOne">+ Add information</button>
                </div>
                <div data-bind="ifnot: $root.previousConnectFrom">
                    <button class="webpad-node webpad-green" data-bind="click: $root.SelectPreviousFrom">+ Connect to Card</button>
                </div>
                <div data-bind="if: $root.previousConnectFrom() && $root.previousConnectFrom() == $data">
                    <button class="webpad-node webpad-orange" 
                        >
                            #click catcher
                    </button>
                </div>
                <div data-bind="if: $root.previousConnectFrom() && $root.previousConnectFrom() == $data">
                    <button class="webpad-node webpad-yellow" 
                        data-bind=
                            "click: $root.ClearPreviousFrom">
                            - Discard Connect
                    </button>
                </div>
            </div>
            
            
        </div>
</script>

